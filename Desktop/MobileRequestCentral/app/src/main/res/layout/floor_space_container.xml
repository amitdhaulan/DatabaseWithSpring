<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1" >

        <fragment
            android:id="@+id/floor_space_left_fragment"
            class="com.example.locationfilterization.FloorListFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4" >
        </fragment>

        <fragment
            android:id="@+id/floor_space_right_fragment"
            android:name="com.example.locationfilterization.SpaceListFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6" />
    </LinearLayout>