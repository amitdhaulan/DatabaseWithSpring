<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timelog_detail_outer_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout

        style="@style/header"

        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight=".1"
        android:gravity="left">
        <!--android:background="@drawable/navigationbar"-->


        <Button
            android:id="@+id/requestform_button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttoncustom"

            android:onClick="goback"
            android:text="Back"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timelog_detail_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="Create Request"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_Vrequest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/buttoncustom"
            android:padding="5dp"
            android:text="View Request"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#ffffff"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical"
                android:weightSum="9">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"

                    android:background="@drawable/rounded_edittext2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:text="Location"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".59"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:hint="Location"
                        android:text="BESC - MAIN"
                        android:inputType="none"
                        android:paddingLeft="10dp">


                    </EditText>

                    <Button
                        android:id="@+id/selectLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".1"
                        android:background="@drawable/searchnew2"
                        android:onClick="selectLocation"

                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <!--android:text="Change Location"-->
                    <!--android:background="@drawable/searchnew1"-->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationRequestedForLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext2"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:text="Location Requested For"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/locationRequestedFor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5999"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:hint="Location Requested For"
                        android:inputType="none"
                        android:paddingLeft="10dp">


                    </EditText>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_weight=".0001"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:text="Organization"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/organisation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".59"
                        android:clickable="true"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Search Organization"
                        android:paddingLeft="10dp" />

                    <Button
                        android:id="@+id/selectOrg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5dp"

                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".1"
                        android:background="@drawable/searchnew2"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:text="Service"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/sevice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".689"

                        android:clickable="true"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Click to select service"
                        android:paddingLeft="10dp" />

                    <Button

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".001"
                        android:background="#80ffffff"


                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:text="Emergency"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".689"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/radioSex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/yesRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="YES" />

                            <RadioButton
                                android:id="@+id/noRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="NO" />

                        </RadioGroup>


                    </LinearLayout>


                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".001"
                        android:background="#80ffffff"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_edittext2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:text="Description"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="0dp"
                        android:layout_height="135dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".699"
                        android:background="@drawable/rounded_edittext2"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="Enter Description"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_edittext2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/linearlayout_forgettingweight"
                        android:layout_width="0dp"

                        android:layout_height="140dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".3"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/uploadimage_txt_capture"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical|left"
                            android:onClick="CaptureImage"
                            android:text="Capture Image"
                            android:textColor="#0000ff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/uploadimage_txt_browse"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical|left"
                            android:onClick="BrowseImage"
                            android:text="Browse Image"
                            android:textColor="#0000ff"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:text=":"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/uploadimage_imgview_id"
                        android:layout_width="0dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".699"
                        android:background="@drawable/rounded_edittext2"
                        android:clickable="true"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:gravity="center"


                        android:hint="Enter Description"
                        android:inputType="date"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"


                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        style="@style/header"

        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center"
        android:layout_weight=".1"
        android:weightSum="3">
    <!--android:background="@drawable/navigationbar"-->



        <Button
            android:id="@+id/submit_button_done"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/buttoncustom"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>